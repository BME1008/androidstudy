<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="안녕하세요"
        android:background="#3F51B5"/>
    <!--
        android:layout_marginOOOO 속성들은 부모인 LinearLayout 을 기준으로 움직임
    -->

    <TextView
        android:layout_margin="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="안녕하세요"
        android:background="#FFEB3B"/>
    <!--
        android:layout_margin 속성은 부모인 내용물이 컴포넌트 안에서 움직임
        android:layout_marginLeft  android:layout_marginRight
        android:layout_marginTop  android:layout_marginBottom 속성을 모두 작성한거랑 같다.
   -->

    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="안녕하세요"
        android:background="#00BCD4"/>
    <!--
        android:paddingOOOO 속성들은 부모인 내용물이 컴포넌트 안에서 움직임
    -->

    <TextView
        android:padding="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="안녕하세요"
        android:background="#67686E"/>
    <!--
        android:padding 속성은 부모인 내용물이 컴포넌트 안에서 움직임
        android:paddingTop      android:paddingBottom
        android:paddingLeft      android:paddingRight  속성을 모두 작성한거랑 같다.
    -->
</LinearLayout>